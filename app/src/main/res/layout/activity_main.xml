<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="해외결제 계산기"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/main_dotline_1"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="87dp"
        android:src="@drawable/main_dotline_2"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/listView" />



    <LinearLayout
        android:id="@+id/total_background"
        android:orientation="horizontal"
        android:background="#f57d67"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="최저가격"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_above="@+id/total_background"
            android:layout_alignStart="@+id/total_background" />

        <TextView
            android:id="@+id/exchanged_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="null"
            android:layout_marginLeft="120dp"
            android:textColor="#fff"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="원"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/total_background"
        android:layout_above="@+id/total_background" />


</RelativeLayout>
